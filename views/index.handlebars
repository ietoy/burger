<h1>Eat Da Burger!</h1>
  <h2>Burgers I Want to Eat!</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          <li>
            {{burger_name}}
            <button class="devour-it" data-id="{{id}}">DEVOUR IT!</button>
          </li>
        {{/unless}}
      {{/each}}
    </ul>

  <h2>Burgers I Ate!</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          <li>
            {{burger_name}}
          </li>
        {{/if}}
      {{/each}}
    </ul>

  <h2>Add a Burger</h2>
    <form class="create-form">
      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>
      <button type="submit">Add Burger</button>
    </form>
